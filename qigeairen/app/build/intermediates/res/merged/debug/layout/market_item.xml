<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="7.97dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/market_goods"
            android:layout_width="183.69dp"
            android:layout_height="190.57dp"
            android:background="@mipmap/goods1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView

                android:layout_width="91dp"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:text="简约收藏"
                android:textSize="10.87sp"
                android:layout_marginRight="3.98dp"
                android:id="@+id/goods_name"/>

            <TextView
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:id="@+id/goods_detail"
                android:text="让心自然平静"
                android:textSize="10.87sp"
                android:layout_marginLeft="3.98dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:id="@+id/goods_currprice"
                android:text="￥108.00"
                android:textSize="9.42sp"
                android:layout_marginRight="3.98dp"
                tools:textColor="@android:color/holo_orange_dark"/>
            <TextView
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:id="@+id/goods_oldprice"
                android:text="￥208.00"
                android:textSize="9.42sp"
                android:layout_marginLeft="3.98dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:id="@+id/goods_buynumber"
                android:text="36人付款"
                android:textSize="9.05sp"
                android:layout_marginRight="3.98dp"
                />
            <TextView
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:text="存库45件"
                android:id="@+id/goods_number"
                android:layout_marginLeft="3.98dp"
                android:textSize="9.05sp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
