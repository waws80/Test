<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="344.2dp"
                android:layout_height="match_parent"
                android:background="@color/colorSlidingMenuBg"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="174.6dp"
        android:background="@mipmap/menu_head_bg">
        <com.qigeairen.user.utils.customview.CirlceView
            android:id="@+id/menu_head"
            android:layout_width="64.35dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/nv_n"
           android:layout_marginLeft="25dp"
            android:layout_height="64.35dp"/>
        <TextView
            android:id="@+id/menu_id"
            android:layout_width="wrap_content"
            android:textSize="12.68sp"
            android:textColor="@android:color/white"
            android:text="书中自有颜如玉"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/menu_edit_info"
            android:layout_width="92dp"
            android:textSize="10.87sp"
            android:textColor="@android:color/white"
            android:text="@string/menu_edit_info"
            android:onClick="menuOnClick"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@mipmap/menu_edit_info"
            android:layout_marginTop="142.6dp"
            android:layout_height="22.1dp"/>

        <LinearLayout
            android:layout_width="120dp"
            android:orientation="horizontal"
            android:layout_marginTop="140dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="24.6dp">
            <ImageView
                android:id="@+id/menu_sigin_in_icon"
                android:layout_weight="1"
                android:src="@mipmap/menu_sigin_in"
                android:layout_width="23.6dp"
                android:layout_height="24.6dp"/>
            <TextView
                android:id="@+id/menu_sigin_in"
                android:layout_weight="8"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textSize="10.87sp"
                android:onClick="menuOnClick"
                android:textColor="@android:color/white"
                android:text="您已签到26天"
                android:singleLine="true"
                android:background="@drawable/style_menu_sigin_in"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/menu_lv"
        android:dividerHeight="1dp"
        android:layout_marginTop="174.8dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/white"
        android:divider="@color/colorSlidingMenuBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="48.9dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorSlidingMenuBg"/>
        <ImageView
            android:id="@+id/menu_fankui"
            android:src="@mipmap/menu_pen"
            android:layout_width="20.3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/fankui"
            android:text="@string/menu_fankui"
            android:onClick="menuOnClick"
            android:textSize="11.96sp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60.3dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/menu_job"
            android:src="@mipmap/menu_job"
            android:layout_width="20.3dp"
            android:layout_toLeftOf="@+id/job"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/job"
            android:text="@string/menu_find_work"
            android:onClick="menuOnClick"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="11.96sp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>